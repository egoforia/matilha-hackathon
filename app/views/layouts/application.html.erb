<!DOCTYPE html>
<html>
<head>
  <title>Nice Start</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<header class="main-header">
	<div class="container">
		<div class="row">
			<div class="col-xs-6">
				<h1><a href="/forms" class="logotype">Nice Start</a></h1>
			</div>
			<div class="col-xs-6 text-right">
				<!-- <strong>Logged User</strong><br> -->
				<%= link_to(destroy_lawyer_session_path, class:' btn btn-default logout-button', alt: 'Sair do aplicativo', :method => :delete) do %>
				<i class="fa fa-power-off"></i> &nbsp;&nbsp; Sair
				<% end%>
			</div>
		</div>
	</div>
</header>
<div class="body-content-wrapper">
	<%= yield %>
</div>
<footer class="main-footer">
	<div class="container">
		<div class="row text-center">
			<div class="col-xs-12"><a href="/forms" class="logotype-symbol">Nice Start</a></div>
		</div>
	</div>
</footer>
</body>
</html>
